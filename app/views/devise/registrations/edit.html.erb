<h1 class="pt-6 pb-2 text-4xl font-semibold">Edit your user profile<%# resource_name.to_s.humanize %></h1>

<div class="container pt-2">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }, html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div><%= f.label :firstname, class: "block text-gray-700 text-sm font-bold mt-4" %></div>
    <div><%= f.text_field :firstname, class: "rounded-sm" %></div>
    <div><%= f.label :lastname, class: "block text-gray-700 text-sm font-bold mt-4" %></div>
    <div><%= f.text_field :lastname, class: "rounded-sm" %></div>
    <div><%= f.label :email, class: "block text-gray-700 text-sm font-bold mt-4" %></div>
    <div><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-sm" %></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

    <div><%= f.label :password, class: "block text-gray-700 text-sm font-bold mt-4" %><span class="text-xs italic">(leave blank if you're not changing your password)</span></div>
    <div><%= f.password_field :password, autocomplete: "new-password", class: "rounded-sm" %></div>
    <% if @minimum_password_length %>
      <span class="text-xs italic"><%= @minimum_password_length %> characters minimum</span>
    <% end %>
    <div><%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-bold mt-4" %></div>
    <div><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded-sm" %></div>
    <div><%= f.label :current_password, class: "block text-gray-700 text-sm font-bold mt-4" %><span class="text-xs italic">(Enter current password to confirm your changes)</span></div>
    <div><%= f.password_field :current_password, autocomplete: "current-password", class: "rounded-sm" %></div>

    <%= f.submit "Update", class: "mt-6 rounded-lg py-3 px-5 bg-green-400 inline-block font-medium hover:bg-green-600 active:bg-green-700 focus:outline-none focus:ring focus:ring-ring-300" %>
<% end %>
</div>

<h3 class="pt-5 pb-0 text-2xl font-semibold">Cancel my account</h3>

<p><%= button_to "Remove my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "text-red-700" %></p>

<%= link_to "Back", :back %>
