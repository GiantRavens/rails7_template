<div class="flex flex-row space-x-4 pt-4">
  <%- if controller_name != 'sessions' %>
    <div><%= link_to "sign in", new_session_path(resource_name), class: "text-gray-500" %></div>
  <% end %>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div><%= link_to "sign up", new_registration_path(resource_name), class: "text-gray-500" %></div>
  <% end %>
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div><%= link_to "forgot password?", new_password_path(resource_name), class: "text-gray-500"  %></div>
  <% end %>
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div><%= link_to "no confirmation instructions?", new_confirmation_path(resource_name), class: "text-gray-500"  %></div>
  <% end %>
  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div><%= link_to "no unlock instructions?", new_unlock_path(resource_name), class: "text-gray-500"  %></div>
  <% end %>
  <%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div><%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "text-gray-500", method: :post %></div>
  <% end %>
<% end %>
</div>
