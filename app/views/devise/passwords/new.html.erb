<h1 class="pt-6 pb-2 text-4xl font-semibold">Forgot your password?</h1>

<div class="container pt-2">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.label :email, class: "block text-gray-700 text-sm font-bold mt-4" %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "rounded-sm" %>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "mt-6 rounded-lg py-3 px-5 bg-green-400 inline-block font-medium hover:bg-green-600 active:bg-green-700 focus:outline-none focus:ring focus:ring-ring-300" %>
  </div>
<% end %></div>

<%= render "devise/shared/links" %>
