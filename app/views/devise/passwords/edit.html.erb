<h1 class="pt-6 pb-2 text-4xl font-semibold">Change your password</h1>

<div class="container pt-2">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    <%= f.label :password, "New password", class: "block text-gray-700 text-sm font-bold mt-4" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "rounded-sm" %>
    <%= f.label :password_confirmation, "Confirm new password", class: "block text-gray-700 text-sm font-bold mt-4" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded-sm" %>

    <%= f.submit "Change my password", class: "mt-6 rounded-lg py-3 px-5 bg-green-400 inline-block font-medium hover:bg-green-600 active:bg-green-700 focus:outline-none focus:ring focus:ring-ring-300" %>

<% end %>
</div>

<%= render "devise/shared/links" %>
